---
import Layout from "@layouts/Layout.astro";
import Container from "@components/container.astro";
import { t, getCurrentLanguage } from "@utils/i18n";

// Get current language from URL
const currentLang = getCurrentLanguage(Astro.url);
---

<Layout title={t("mics.404_title", currentLang)}>
  <Container>
    <div class="flex items-center justify-center min-h-[50vh]">
      <div class="text-center">
        <h1 class="text-6xl font-bold text-gray-900 dark:text-white mb-4">
          {t("mics.404_h2_text", currentLang)}
        </h1>
        <h2 class="text-2xl font-semibold text-gray-700 dark:text-gray-300 mb-4">
          {t("mics.404_h2_text2", currentLang)}
        </h2>
        <p class="text-gray-600 dark:text-gray-400 mb-2">
          {t("mics.404_line1", currentLang)}
        </p>
        <p class="text-gray-600 dark:text-gray-400 mb-8">
          {t("mics.404_line2", currentLang)}
        </p>
        <a 
          href={currentLang === 'ms' ? '/' : `/${currentLang}/`}
          class="inline-flex items-center px-6 py-3 bg-blue-600 hover:bg-blue-700 text-white font-medium rounded-md transition-colors"
        >
          {t("mics.404_back", currentLang)}
        </a>
      </div>
    </div>
  </Container>
</Layout>
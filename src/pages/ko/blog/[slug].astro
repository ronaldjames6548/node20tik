---
// Template for src/pages/blog/[slug].astro
import { getCollection } from "astro:content";
import Layout from "@layouts/Layout.astro";
import Container from "@components/container.astro";
import { t, getCurrentLanguage, getLocalizedUrl } from "@utils/i18n";

export async function getStaticPaths() {
  // Hardcode language for main file - change for language-specific files
  const currentLang = "ko"; // Change to "ar", "it", etc. for language-specific files
  
  const posts = await getCollection("blog", ({ data }) => {
    return !data.draft;
  });

  // Filter posts for current language
  const localizedPosts = posts.filter(post => {
    const [...slug] = post.slug.split("/");
    let lang = "en";
    const firstSlug = post.slug.match(/^([^\/]*)\//);
    if (firstSlug) {
      lang = firstSlug[1];
    }
    return lang === currentLang;
  });

  return localizedPosts.map(post => ({
    params: { slug: post.slug.replace(/^[^\/]*\//, '') },
    props: { post }
  }));
}

const { post } = Astro.props;

// Get current language for component rendering
const currentLang = getCurrentLanguage(Astro.url);
---

<Layout title={post.data.title}>
  <Container>
    <div class="mx-auto max-w-3xl mt-14">
      <span class="text-blue-400 uppercase tracking-wider text-sm font-medium">
        {post.data.category}
      </span>
      <h1 class="text-4xl lg:text-5xl font-bold lg:tracking-tight mt-1 lg:leading-tight">
        {post.data.title}
      </h1>
      <div class="flex gap-2 mt-3 items-center flex-wrap md:flex-nowrap">
        <span class="text-gray-400">
          {post.data.author}
        </span>
        <span class="text-gray-400">•</span>
        <time class="text-gray-400" datetime={post.data.publishDate.toISOString()}>
          {post.data.publishDate.toDateString()}
        </time>
      </div>
    </div>

    <div class="mx-auto prose prose-lg mt-6 max-w-3xl">
      <post.render />
    </div>

    <div class="text-center mt-8">
      <a 
        href={getLocalizedUrl("/blog", currentLang)} 
        class="bg-gray-100 px-5 py-3 rounded-md hover:bg-gray-200 transition"
      >
        ← {t("mics.back_blog", currentLang)}
      </a>
    </div>
  </Container>
</Layout>
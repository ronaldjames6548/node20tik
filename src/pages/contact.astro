---
import Layout from "@layouts/Layout.astro";
import Container from "@components/container.astro";
import Sectionhead from "@components/sectionhead.astro";
import { t, getCurrentLanguage } from "@utils/i18n";

// Get current language from URL
const currentLang = getCurrentLanguage(Astro.url);
---

<Layout title={t("mics.contact_title", currentLang)}>
  <Container>
    <Sectionhead>
      <Fragment slot="title">{t("mics.contact_h1", currentLang)}</Fragment>
      <Fragment slot="desc">{t("mics.contact_text", currentLang)}</Fragment>
    </Sectionhead>

    <div class="grid md:grid-cols-2 gap-10 mx-auto max-w-4xl mt-16">
      <div>
        <h2 class="font-medium text-2xl text-gray-800 dark:text-white">
          {t("mics.contact_h2", currentLang)}
        </h2>
        <p class="text-lg leading-relaxed text-slate-500 mt-3">
          {t("mics.contact_text", currentLang)}
        </p>
      </div>
      
      <div>
        <form>
          <div class="mb-5">
            <input
              type="text"
              placeholder={t("mics.contact_form_f1", currentLang)}
              name="name"
              class="w-full px-4 py-3 border-2 placeholder:text-gray-800 dark:text-white rounded-md outline-none dark:placeholder:text-gray-200 dark:bg-gray-900 focus:ring-4 border-gray-300 focus:border-gray-600 ring-gray-100 dark:border-gray-600 dark:focus:border-white dark:ring-0"
            />
          </div>
          <div class="mb-5">
            <input
              type="email"
              placeholder={t("mics.contact_form_f2", currentLang)}
              name="email"
              class="w-full px-4 py-3 border-2 placeholder:text-gray-800 dark:text-white rounded-md outline-none dark:placeholder:text-gray-200 dark:bg-gray-900 focus:ring-4 border-gray-300 focus:border-gray-600 ring-gray-100 dark:border-gray-600 dark:focus:border-white dark:ring-0"
            />
          </div>
          <div class="mb-3">
            <textarea
              placeholder={t("mics.contact_form_f3", currentLang)}
              name="message"
              class="w-full px-4 py-3 border-2 placeholder:text-gray-800 dark:text-white dark:placeholder:text-gray-200 dark:bg-gray-900 rounded-md outline-none h-36 focus:ring-4 border-gray-300 focus:border-gray-600 ring-gray-100 dark:border-gray-600 dark:focus:border-white dark:ring-0"
            ></textarea>
          </div>
          <button
            type="submit"
            class="w-full py-4 font-semibold text-white transition-colors bg-black rounded-md hover:bg-gray-800 focus:outline-none focus:ring-offset-2 focus:ring focus:ring-gray-200 px-7 dark:bg-white dark:text-black"
          >
            {t("mics.contact_submit", currentLang)}
          </button>
        </form>
      </div>
    </div>
  </Container>
</Layout>